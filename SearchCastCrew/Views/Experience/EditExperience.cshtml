@model SearchCastCrew.Models.ExperienceEditVm
@{
    //Layout = null;
}

<link href="~/Content/Profile.css" rel="stylesheet" />
<div class="container">
    <div class="row clearfix">
        <div class="col-md-3 column">

        </div>
        <div class="col-md-6 column margin-edit">
            <div class="well">
                <h2>Edit Job Experience Entry</h2>


                @using (Html.BeginForm())
                {
                    <div class="form-horizontal">
                        <hr />
                        @Html.HiddenFor(model => model.ExperienceId)

                        <div class="form-group">
                            <div style="text-align: center">
                                <div class="col-sm-pull-5">
                                    @Html.TextAreaFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div style="text-align: center">
                                <button class="btn btn-default" type="submit" value="SaveExperience">Save Changes</button>
                                <button class="btn btn-default" onclick="goBack()">Cancel</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="col-md-3 column">

                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .margin-edit {
        margin-top: 100px;
    }
</style>